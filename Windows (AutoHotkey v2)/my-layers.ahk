LAlt & i::SendInput "{8}"
LAlt & o::SendInput "{9}"
LAlt & p::SendInput "{0}"
LAlt & y::SendInput "{/}"
LAlt & h::SendInput "{*}"
LAlt & .::SendInput "{-}"
LAlt & `;::SendInput "{+}"

; Symbol Layer (CapsLock)
CapsLock & n::SendInput "{{}"
CapsLock & m::SendInput "{}}"
CapsLock & j::SendInput "{(}"
CapsLock & k::SendInput "{)}"
CapsLock & u::SendInput "{[}"
CapsLock & i::SendInput "{]}"
CapsLock & l::SendInput "{=}"
CapsLock & h::SendInput "{_}"
CapsLock & o::SendInput "{&}"   
CapsLock & p::SendInput "{@}"
CapsLock & y::SendInput "{#}"
CapsLock & .::SendInput "{$}"
CapsLock & ,::SendInput "{%}"
CapsLock & `;::SendInput "{!}"
CapsLock & [::~
CapsLock & ]::^

; Function Layer (RAlt ou Control+Shift)
